{% extends 'layout.twig' %}
{% block title %}Register{% endblock %}
{% block content %}
    <h1 class="text-2xl font-bold mb-4">Register</h1>
    {% if error %}
        <div class="bg-red-900/50 border border-red-700 rounded-lg p-4 mb-4 max-w-sm mx-auto">
            <p class="text-red-300">{{ error }}</p>
        </div>
    {% endif %}
    <form action="/register" method="POST" class="max-w-sm mx-auto">
        <div class="mb-4">
            <label for="username" class="block text-gray-400 text-sm font-bold mb-2">Username</label>
            <input type="text" id="username" name="username" required value="{{ username|default('') }}"
                   class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-400 leading-tight focus:outline-none focus:shadow-outline">
            {% if errors['username'] is defined %}
                <span class="text-red-500">{{ errors['username'] }}</span>
            {% endif %}
        </div>
        <div class="mb-6">
            <label for="password" class="block text-gray-400 text-sm font-bold mb-2">Password</label>
            <input type="password" id="password" name="password" required value="{{ password|default('') }}"
                   class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-400 leading-tight focus:outline-none focus:shadow-outline">
            {% if errors['password'] is defined %}
                <span class="text-red-500">{{ errors['password'] }}</span>
            {% endif %}
        </div>
        <div class="mb-6">
            <label for="confirm_password" class="block text-gray-400 text-sm font-bold mb-2">Confirm Password</label>
            <input type="password" id="confirm_password" name="confirm_password" required value="{{ confirm_password|default('') }}"
                   class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-400 leading-tight focus:outline-none focus:shadow-outline">
            {% if errors['confirm_password'] is defined %}
                <span class="text-red-500">{{ errors['confirm_password'] }}</span>
            {% endif %}
        </div>
        <button type="submit"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Register
        </button>
    </form>
{% endblock %}